<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.github.issamzeggai.listechampions.View.MainActivity">

    <!-- A RecyclerView with some commonly used attributes -->
    <TextView
        android:layout_width="395dp"
        android:layout_height="122dp"
        android:layout_above="@+id/my_recycler_view"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="21dp"
        android:layout_marginBottom="-58dp"
        android:text="Bibliothèque des Champions de League of Legends"
        android:textAlignment="center"
        android:textColor="@color/colorGold"
        android:textColorHighlight="@color/cardview_light_background"
        android:textSize="22sp"
        android:textStyle="bold"
        tools:text="Bibliothèque des Champions de League of Legends" />

    <ProgressBar
        android:id="@+id/Progress_Bar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="181dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:layout_width="372dp"
        android:layout_height="630dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="65dp"
        android:layout_marginRight="16dp"
        android:scrollbars="vertical">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>